<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="El potencial de Google Apps Script con Android Wear"
        android:textSize="20sp"
        android:layout_gravity="left"
        android:layout_margin="20dp"
        android:id="@+id/textView2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:textColor="@color/primary"
        android:textSize="16sp"
        android:id="@+id/txt_bundle_data"
        android:layout_gravity="left"
        android:layout_alignTop="@+id/txt_bundle"
        android:layout_toRightOf="@+id/txt_bundle"
        android:layout_toEndOf="@+id/txt_bundle" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Persona a Registrar:"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:id="@+id/txt_bundle"
        android:layout_gravity="left"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:gravity="center"
        android:textColor="@color/primary"
        android:textSize="20sp"
        android:id="@+id/txt_response"
        android:layout_below="@+id/txt_bundle_data"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp" />

</RelativeLayout>